{
  "name": "mywebserver",
  "description": "A simple live reload server",
  "builds": [
    {
      "Name": "mywebserver.exe",
      "SrcDir": ".",
      "OutDir": "build",
      "BuildArgs": [
        "build",
        "-o",
        "build/mywebserver.exe"
      ],
      "BuildEnvirons": null,
      "RunCommand": ".\\mywebserver.exe",
      "RunArgs": [
        "--bind",
        ":8081"
      ],
      "RunEnvirons": null,
      "RunWorkDir": "build",
      "Globs": [
        "*.go","embeded/template/*", "embeded/wwwroot/*/*"
      ],
      "HeartBeat": 1000000000
    }
  ]
}