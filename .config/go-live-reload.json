{
  "name": "github.com/dearing/go-live-reload",
  "description": "example config",
  "builds": [
    {
      "name": "www",
      "description": "frontend webserver",
      "match": [
        "*.go",
        "embeded/template/*",
        "embeded/wwwroot/*",
        "embeded/wwwroot/*/*"
      ],
      "heartBeat": 1000000000,
      "buildCmd": "go",
      "buildArgs": [
        "build",
        "-o",
        "build/mywebserver"
      ],
      "buildDir": ".",
      "runCmd": "./mywebserver",
      "runArgs": [
        "--bind",
        ":8081"
      ],
      "runDir": "build",
      "runEnv": [
        "SECRET=friend"
      ]
    },
    {
      "name": "test",
      "description": "test",
      "match": [
        "*.go"
      ],
      "heartBeat": 1000000000,
      "buildCmd": "true",
      "buildDir": ".",
      "runCmd": "go",
      "runArgs": [
        "test",
        "./..."
      ],
      "runDir": "."
    }
  ]
}