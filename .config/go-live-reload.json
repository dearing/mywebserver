{
  "name": "github.com/dearing/go-live-reload",
  "description": "example config",
  "builds": [
    {
      "name": "www",
      "description": "frontend webserver",
      "match": [
        "*.go",
        "embedded/template/*",
        "embedded/wwwroot/*",
        "embedded/wwwroot/*/*"
      ],
      "heartBeat": 1000000000,
      "buildCmd": "go",
      "buildArgs": [
        "build",
        "-o",
        "build/"
      ],
      "buildDir": ".",
      "runCmd": "./mywebserver",
      "runArgs": [
        "--bind",
        ":8081"
      ],
      "runDir": "build"
    },
    {
      "name": "secret-server",
      "description": "secret server",
      "match": [
        "*.go",
        "embedded/template/*",
        "embedded/wwwroot/*",
        "embedded/wwwroot/*/*"
      ],
      "heartBeat": 1000000000,
      "buildCmd": "sleep",
      "buildArgs": [
        "5s"
      ],
      "buildDir": ".",
      "runCmd": "./mywebserver",
      "runArgs": [
        "--bind",
        ":8082"
      ],
      "runDir": "build",
      "runEnv": [
        "SECRET=friend"
      ]
    }
  ],
  "reverseProxy": {
    "/": {
      "host": "http://localhost:8081",
      "customHeaders": {
        "Test-Header": "Hello World!"
      }
    },
    "/api/": {
      "host": "http://localhost:8082",
      "customHeaders": {
        "Speak-Friend": "mellon"
      },
      "insecureSkipVerify": true
    }
  },
  "bind": ":8443",
  "tlsCertFile": "/home/jacob/certs/cert.pem",
  "tlsKeyFile": "/home/jacob/certs/key.pem"
}